  <script>
    document.getElementById('year').textContent = new Date().getFullYear();

    const body = document.body;
    const toggleBtns = [document.getElementById('toggleTheme'), document.getElementById('toggleThemeMobile')];
    const menuBtn = document.getElementById('menuBtn');
    const mobileNav = document.getElementById('mobileNav');

    // Load saved theme
    if (localStorage.getItem('theme') === 'dark') {
      body.classList.add('dark');
      toggleBtns.forEach(btn => btn.textContent = 'â˜€ï¸ Light');
    }

    // Theme toggle
    toggleBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        body.classList.toggle('dark');
        const isDark = body.classList.contains('dark');
        toggleBtns.forEach(b => b.textContent = isDark ? 'â˜€ï¸ Light' : 'ðŸŒ™ Dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
    });

    // Mobile menu toggle
    menuBtn.addEventListener('click', () => {
      mobileNav.classList.toggle('show');
    });
  </script>
